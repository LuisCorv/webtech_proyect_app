<%= render partial: "layouts/adjust_background" %>
<div class="card mx-auto w-50 p-3 bg-white text-black text-center">


<%= render @chat %>

<div>
  <%current_ticket= Ticket.find(params[:ticket_id])%>

  <%if current_user.Executive?  %>
        <% if params[:assign_ticket_id].present?%>
            <%= link_to "New comment", new_user_assign_ticket_ticket_chat_comment_path(current_user,current_ticket.assign_ticket,current_ticket,@chat), class:"btn btn-sm btn-success mt-2", style:'margin-right: 10px;' %>
            <%= link_to "Check comments", user_assign_ticket_ticket_chat_comments_path(current_user,current_ticket.assign_ticket,current_ticket,@chat), class:"btn btn-sm btn-warning mt-2", style:'margin-right: 10px;' %>
            <%= button_to "Empty this chat", user_assign_ticket_ticket_chat_path(current_user,current_ticket.assign_ticket,current_ticket,@chat), method: :delete, class:"btn btn-danger btn-sm mt-2" %>
             </div>
            </div>
            <div class="card mx-auto w-50 p-3 bg-white text-black text-center mt-2">
                  <%= link_to "Back to the ticket", user_assign_ticket_ticket_path(current_user,params[:assign_ticket_id],current_ticket), class:"btn btn-sm btn-secondary mt-2", style:'margin-right: 10px;'  %>            
            </div>
        <%end  %>
      <%elsif current_user.Supervisor? or current_user.Administrator? %>
            <%= link_to "New comment", new_user_ticket_chat_comment_path(current_user,current_ticket,@chat), class:"btn btn-sm btn-success mt-2", style:'margin-right: 10px;' %>      
            <%= link_to "Check comments", user_ticket_chat_comments_path(current_user,current_ticket,@chat), class:"btn btn-sm btn-warning mt-2", style:'margin-right: 10px;' %> 
            <%= button_to "Empty this chat", user_ticket_chat_path(current_user,current_ticket,@chat), method: :delete, class:"btn btn-danger btn-sm mt-2" %>         

             </div>
            </div>
            <div class="card mx-auto w-50 p-3 bg-white text-black text-center mt-2">
            <%= link_to "Back to the ticket",  user_ticket_path(current_user,current_ticket), class:"btn btn-sm btn-secondary mt-2", style:'margin-right: 10px;'  %>   
            </div>
      <%end  %>

  
</div>

</div>