<div class="bg-image" style="background-image: url('https://i.pinimg.com/originals/c2/41/3b/c2413b33840fb46ca118fe3bb8c32cbf.jpg');
height: 96vh;">

<div class="card mx-auto w-50 p-3 bg-white text-black text-center">
<h2>Forgot your password?</h2>
</div>

<br>

<div class="card mx-auto w-50 p-3 bg-white text-black text-center">
<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

   <div class="form-row ">
      <div class="form-group col-4 mx-auto text-center">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:' btn btn-secondary mt-2' %>
    </div>
  <% end %>
  </div>
</div>

<br>

<div class="card mx-auto w-50 p-3 bg-white text-black text-center">
<%= render "devise/shared/links" %>
</div>