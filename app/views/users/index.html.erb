<p style="color: green"><%= notice %></p>
<div class="text-center">
<h1>Users</h1>
</div>
<br>
<div id="users">
  <% @users.each do |user| %>
  <div class="card mx-auto w-50 p-3 bg-white text-black text-center">
    <%= render user %>
    <p>
      <%if current_user.Supervisor? and user.profile!="Administrator" %>
        <%= link_to "Show this user", user, class:"btn btn-warning mt-2" %>
      <%elsif current_user.Administrator? %>
        <%= link_to "Show this user", user, class:"btn btn-warning mt-2" %>
      <%end  %>
    </p>
    </div>
    <br>
  <% end %>
</div>

<br>
