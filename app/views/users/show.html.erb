<%= render partial: "layouts/adjust_background" %>

<div class="card mx-auto w-50 p-3 bg-white text-black text-center">
<%= render @user %>

  <p class="mx-auto text-center", style="display: flex; flex-wrap: wrap;">
    <%if @user.User? %>
      <%= link_to "My Tickets ", user_ticket_lists_path(@user), class:"btn btn-sm btn-warning mt-2", style:'margin-right: 10px;' %>

    <%elsif @user.Executive?  %>

      <%= link_to "My Tickets ", user_ticket_lists_path(@user), class:"btn btn-sm btn-warning mt-2", style:'margin-right: 10px;' %>
      <%= link_to "My Assigned Tickets ", user_assign_tickets_path(@user), class:"btn btn-sm btn-warning mt-2", style:'margin-right: 10px;' %>

    <%else  %>

      <%= link_to "See Ticket Report", user_ticket_report_path(@user), class:"btn btn-sm btn-primary mt-2", style:'margin-right: 10px;'%> 
      <%= link_to "See Overdue Report", user_overdue_report_path(@user), class:"btn btn-sm btn-primary mt-2", style:'margin-right: 10px;'%> 
      <%= link_to "See Performance Report", user_performance_reports_path(@user), class:"btn btn-sm btn-primary mt-2", style:'margin-right: 10px;' %>
     
      <%end  %>
    <%if current_user==@user and (current_user.Administrator? or current_user.Supervisor?) %>
      <p class="mx-auto text-center", style="display: flex; flex-wrap: wrap;"> 
        <%= link_to "Back to the users", users_path, class:"btn btn-sm btn-secondary mt-2", style:'margin-right: 10px;'%>
        <%= link_to "Edit your user", edit_user_registration_path(), class:"btn btn-sm btn-info mt-2"%> 
      </p>
    <%elsif current_user!=@user and (current_user.Administrator? or current_user.Supervisor?) %>
      <p class="mx-auto text-center", style="display: flex; flex-wrap: wrap;"> 
        <%= link_to "Back to the users", users_path, class:"btn btn-sm btn-secondary mt-2", style:'margin-right: 10px;'%>
      </p>
    <%elsif current_user==@user %>
    <p class="mx-auto text-center", style="display: flex; flex-wrap: wrap;"> 
      <%= link_to "Edit your user", edit_user_registration_path(), class:"btn btn-sm btn-info mt-2"%> 
    </p>
    <%end  %>
  </p>

</div>
