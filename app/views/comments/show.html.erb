
<%= render partial: "layouts/adjust_background" %> 
<%current_ticket= Ticket.find(params[:ticket_id])%>
<%current_chat= Chat.find(params[:chat_id])%>

<div class="card mx-auto w-50 p-3 bg-white text-black text-center">


<%= render @comment %>

<div>
  <%if current_user.Executive?  %>
        
            <%= button_to "Destroy this comment", user_assign_ticket_ticket_chat_comment_path(current_user,current_ticket.assign_ticket,current_ticket,current_chat,@comment), method: :delete, class:"btn btn-sm btn-danger mt-2", style:'margin-right: 10px;' %>
            </div>
            </div>
            <div class="card mx-auto w-50 p-3 bg-white text-black text-center mt-2">
                  
            <%= link_to "Back to comments", user_assign_ticket_ticket_chat_comments_path(current_user,params[:assign_ticket_id],current_ticket,current_chat), class:"btn btn-sm btn-secondary mt-2", style:'margin-right: 10px;' %>            
          </div>
        
      <%elsif current_user.Supervisor? or current_user.Administrator? %>
       
            <%= button_to "Destroy this comment", user_ticket_chat_comment_path(current_user,current_ticket,current_chat,@comment), method: :delete, class:"btn btn-sm btn-danger mt-2", style:'margin-right: 10px;' %>
         </div>
            </div>
            <div class="card mx-auto w-50 p-3 bg-white text-black text-center mt-2">
                  
            <%= link_to "Back to comments",  user_ticket_chat_comments_path(current_user,current_ticket,current_chat), class:"btn btn-sm btn-secondary mt-2", style:'margin-right: 10px;' %>            
            </div>
      <%end  %>

  
</div>

</div>