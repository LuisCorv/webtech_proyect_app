<%= render partial: "layouts/adjust_background" %>

<div class="card mx-auto w-50 p-3 bg-white text-black text-center">


<%= render @tag_list %>

<div>
  <%current_ticket= Ticket.find(params[:ticket_id])%>

  <%if current_user.Executive?  %>
        <% if params[:assign_ticket_id].present?%>
             <%= link_to "Add a tag ", new_user_assign_ticket_ticket_tag_list_tag_path(current_user,params[:assign_ticket_id],current_ticket,@tag_list), class:"btn btn-sm btn-success mt-2", style:'margin-right: 10px;' %>
            <%= link_to "Check Tags", user_assign_ticket_ticket_tag_list_tags_path(current_user,current_ticket.assign_ticket,current_ticket,@tag_list), class:"btn btn-sm btn-warning mt-2", style:'margin-right: 10px;' %> 
            <%= button_to "Empty this tag list", user_assign_ticket_ticket_tag_list_path(current_user,current_ticket.assign_ticket,current_ticket,@tag_list), method: :delete, class:"btn btn-danger btn-sm mt-4" %>
            </div>
            </div>
            <div class="card mx-auto w-50 p-3 bg-white text-black text-center mt-2">
              <%= link_to "Back to the ticket", user_assign_ticket_ticket_path(current_user,params[:assign_ticket_id],current_ticket), class:"btn btn-sm btn-secondary mt-2", style:'margin-right: 10px;' %>            
            </div>
        <%end  %>
      <%elsif current_user.Supervisor? or current_user.Administrator? %>
        
            <%= link_to "Add a tag", new_user_ticket_tag_list_tag_path(current_user,current_ticket,@tag_list) , class:"btn btn-sm btn-success mt-2", style:'margin-right: 10px;'%>
            <%= link_to "Check Tags", user_ticket_tag_list_tags_path(current_user,current_ticket,@tag_list), class:"btn btn-sm btn-warning mt-2", style:'margin-right: 10px;' %> 
            <%= button_to "Empty this tag list", user_ticket_tag_list_path(current_user,current_ticket,@tag_list), method: :delete, class:"btn btn-danger btn-sm mt-2" %>        
            </div>
            </div>
            <div class="card mx-auto w-50 p-3 bg-white text-black text-center mt-2">
            <%= link_to "Back to the ticket",  user_ticket_path(current_user,current_ticket), class:"btn btn-sm btn-secondary mt-2", style:'margin-right: 10px;' %>    
            </div>
      <%end  %>

  





</div>